<h2 class="w3-container w3-center">
    Articles
</h2>
<section class="w3-container w3-center w3-flat-clouds fill">
    <% @array.each do |option| %>
    <ul class="w3-centered"><a href="/wiki/get/<%= option %>"><button class="w3-button w3-center w3-medium w3-flat-pomegranate">
                <% substring = 32  %>
            <%= option[0,substring] %></button></a>
        <form action="/wiki/delete" method="POST">
            <%= csrf.form_tag %>
            <input type="hidden" name="_method" value="DELETE">
            <label for="username">
                <input class="w3-input" type="hidden" name="username" id="username" placeholder="username" value="<%= @author %>"
                    required>
            </label>
            <label for="title">
                <input class="w3-input" type="hidden" name="title" id="title" placeholder="title" value="<%= option %>">

            </label>
    </ul>
    </form>
    <% end %>
</section>
<footer class="w3-container w3-center footer">
    <p>&copy; 2017 Derek Viera <br>
        <a href="https://github.com/rangeroob/openmessages.info">View Source</a></p>
</footer>