<header class="w3-container w3-center w3-flat-pomegranate w3-padding-64">
    <h1 class="w3-jumbo">OpenMessages.info</h1>

    <form class="w3-container w3-center w3-flat-pomegranate w3-padding-64" action="/" method="GET">
        <button class="w3-button w3-flat-clouds w3-card-4">Home</button>
    </form>
</header>

<div class="w3-container w3-center" id="editForm" style="display: none;">
    <form action="/wiki/edit" method="POST">
        <%= csrf.form_tag %>
        <input type="hidden" name="_method" value="PUT">
        <br>
        <label for="title">Title:
            <br>
            <input class="w3-input" type="title" name="title" id="title" placeholder="title"  value="<%= @get_title %>"required>
        </label>
        <br>
        <textarea class="w3-input" type="text" id="textarea" name="textarea" style="min-height: 500px;" required><%= @html2markdown %></textarea>
        <br>
       <input class="w3-button w3-center w3-flat-pomegranate" type="submit" value="Submit">
    </form>
    <br>
    <button class="w3-button w3-flat-pomegranate" onclick="displayformContent();">Back</button>
</div>
<div id="page_content" class="content" style="display: block;">
    <div id="markdown_style">
        <style>
            #markdown_style p {
                color: red;
            }

            #markdown_style em {
                color: #900;
            }
        </style>
        <div class="w3-container  w3-flat-clouds w3-padding-64">
            <div class="w3-center">
                <button class="w3-button w3-flat-pomegranate w3-card-4" onclick="displayformContent();">Edit</button>
            </div>
            <br>
            <%= @markdown2html %>
        </div>
    </div>
</div>
<script src="/../js/displayformContent.js">
</script>
<footer class="w3-container w3-center footer">
    <p class="text_center">&copy; 2017 Derek Viera <br>
        <a href="https://github.com/rangeroob/openmessages.info">View Source</a></p>
</footer>